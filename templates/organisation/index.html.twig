{% extends 'base.html.twig' %}

{% block title %}Organisation index{% endblock %}

{% block body %}
    <h1>Organisation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Designation</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for organisation in organisations %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ organisation.designation }}</td>
                <td>{{ organisation.description }}</td>
                <td>
                    <a href="{{ path('app_organisation_show', {'id': organisation.id}) }}"><span class="fa fa-search-plus"></span></a>
                    <a href="{{ path('app_organisation_edit', {'id': organisation.id}) }}"><span class="fa fa-edit"></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4"class="text-warning">aucun enregistrement dans le système</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_organisation_new') }}"class="btn btn-primary">Créer nouveau</a>
{% endblock %}
