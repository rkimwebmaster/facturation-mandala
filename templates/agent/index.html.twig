{% extends 'base.html.twig' %}

{% block title %}Agent index{% endblock %}

{% block body %}
    <h1>Agent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>agent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ agent }}</td>
                <td>
                    <a href="{{ path('app_agent_show', {'id': agent.id}) }}"><span class="fa fa-search-plus"></span></a>
                    <a href="{{ path('app_agent_edit', {'id': agent.id}) }}"><span class="fa fa-edit"></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2"class="text-warning">aucun enregistrement dans le système</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_agent_new') }}"class="btn btn-primary">Créer nouveau</a>
{% endblock %}
